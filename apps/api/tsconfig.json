{
  // Estende o tsconfig raiz, onde est√£o definidos baseUrl, paths e outras regras compartilhadas
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,

    // Herdado do root, mas reafirmado aqui para deixar claro
    "baseUrl": "./",
    "paths": {
      "@salesedge/database": ["../../packages/database/src/index.ts"],
      "@salesedge/database/*": ["../../packages/database/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
